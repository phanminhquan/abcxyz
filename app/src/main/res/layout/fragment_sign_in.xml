<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_fragment1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:orientation="vertical">

        <!-- Component -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/svn_poppins_medium"
                android:textColor="@color/grey_4"
                android:text="Tên đăng nhập" />

            <EditText
                android:id="@+id/sign_in_username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:paddingHorizontal="12sp"
                android:paddingVertical="8sp"
                android:textColorHint="@color/grey_3"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="4sp"
                android:background="@drawable/shape_border_box"
                android:hint="Nhập "
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/svn_poppins_medium"
                android:textColor="@color/grey_4"

                android:text="Mật khẩu" />

            <EditText
                android:id="@+id/sign_in_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingHorizontal="12sp"
                android:paddingVertical="8sp"
                android:textColorHint="@color/grey_3"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="4sp"
                android:background="@drawable/shape_border_box"
                android:hint="Nhập mật khẩu"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_sign_in_response_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/red"
            android:layout_marginTop="4sp"
            android:gravity="center"
            android:text="Số điện thoại không hợp lệ" />
    </LinearLayout>


</FrameLayout>