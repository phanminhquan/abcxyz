<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20sp"
        android:paddingVertical="12sp"
        android:background="@color/pureWhite"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12sp">

            <ImageView
                android:id="@+id/adapter_order_image"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="0sp"
                android:src="@drawable/img_sample_food"
                android:importantForAccessibility="no" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16sp">

                <TextView
                    android:id="@+id/adapter_order_state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã giao"
                    android:textSize="13sp"
                    android:fontFamily="@font/svn_poppins_medium"
                    android:textColor="@color/grey_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textSize="13sp"
                    android:textColor="@color/grey_4" />

                <TextView
                    android:id="@+id/adapter_order_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2023"
                    android:textSize="13sp"
                    android:textColor="@color/grey_4" />
            </LinearLayout>

            <TextView
                android:id="@+id/adapter_order_name_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Quán phở Lệ Quán phở Lệ Quán phở Lệ Quán phở Lệ Quán phở Lệ Quán phở Lệ Quán phở Lệ Quán phở Lệ Quán phở Lệ Quán phở Lệ Quán phở Lệ "
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"

                android:fontFamily="@font/svn_poppins_medium"

                android:layout_weight="1"
                android:layout_marginHorizontal="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginHorizontal="16sp">

                <TextView
                    android:id="@+id/adapter_order_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12,000đ"
                    android:textSize="12sp"
                    android:textColor="@color/grey_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textSize="12sp"

                    android:textColor="@color/grey_4" />

                <TextView
                    android:id="@+id/adapter_order_quantity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="12sp"

                    android:textColor="@color/grey_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" món"
                    android:textSize="12sp"
                    android:textColor="@color/grey_4" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>