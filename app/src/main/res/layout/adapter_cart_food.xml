<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_border_box"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12sp">

        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:outlineSpotShadowColor="@color/transparent"
            app:cardCornerRadius="12sp">

            <ImageView
                android:id="@+id/cart_food_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/img_sample_food" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cart_food_quantity"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="14sp"
            android:layout_marginStart="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" x "
            android:textColor="@color/grey_4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cart_food_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bánh mì thịt"
            android:layout_weight="1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cart_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12,000d"
            android:textSize="16sp"
            android:layout_marginStart="12sp" />

    </LinearLayout>


</LinearLayout>
