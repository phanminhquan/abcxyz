<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/transparent"
        app:cardCornerRadius="12sp"
        android:backgroundTint="@color/grey_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_border_box">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/restaurant_food_cover"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:importantForAccessibility="no"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_sample_food"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="6:4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/grey_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="12sp">

                <TextView
                    android:id="@+id/restaurant_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cơm tấm thịt nướng"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="4sp"
                    android:layout_marginHorizontal="16sp" />

                <TextView
                    android:id="@+id/restaurant_food_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gồm cơm, thịt, chả "
                    android:textSize="13sp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:layout_marginHorizontal="16sp"
                    android:textColor="@color/grey_4" />

                <TextView
                    android:id="@+id/restaurant_food_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35000đ"
                    android:textSize="15sp"
                    android:textFontWeight="600"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="4sp"
                    android:layout_marginHorizontal="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>