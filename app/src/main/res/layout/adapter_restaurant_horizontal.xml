<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/food_shop_cardView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/transparent"
        app:cardCornerRadius="12sp"
        android:layout_marginHorizontal="20sp"
        android:backgroundTint="@color/grey_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_border_box">

            <!-- Ratio 6/5 -->
            <ImageView
                android:id="@+id/food_shop_image1"
                android:layout_width="220sp"
                android:layout_height="180sp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="0sp"
                android:src="@drawable/img_sample_food"
                android:importantForAccessibility="no" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/grey_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="12sp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.02km"
                        android:textColor="@color/grey_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@color/grey_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 phút"
                        android:textColor="@color/grey_4" />
                </LinearLayout>

                <TextView
                    android:id="@+id/food_shop_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quán phở Lệ"
                    android:textSize="18sp"
                    android:fontFamily="@font/svn_poppins_medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginVertical="8sp"
                    android:layout_marginHorizontal="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="16sp">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_star_fill"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.6"
                        android:layout_marginStart="4sp"
                        android:textFontWeight="600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@color/grey_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100+"
                        android:textColor="@color/grey_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" đánh giá"
                        android:textColor="@color/grey_4" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>