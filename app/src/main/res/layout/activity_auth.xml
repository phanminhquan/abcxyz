<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AuthActivity">


    <TextView
        android:id="@+id/auth_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32sp"
        android:letterSpacing="0.1"
        android:paddingTop="32sp"
        android:fontFamily="@font/svn_poppins_bold"
        android:paddingBottom="20sp"
        android:text="Đăng nhập" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/grey_2" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/auth_frame_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>
    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/grey_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20sp"
        android:paddingBottom="32sp">

        <Button
            android:id="@+id/auth_sign_up_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing=".05"
            android:minHeight="0sp"
            android:paddingHorizontal="16sp"
            android:paddingVertical="8sp"
            android:outlineSpotShadowColor="@color/transparent"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxLines="1"


            android:background="@drawable/shape_button_alt"
            android:text="Đăng ký" />

        <Button
            android:id="@+id/auth_sign_in_btn1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing=".05"
            android:minHeight="0sp"
            android:paddingHorizontal="16sp"
            android:paddingVertical="8sp"
            android:outlineSpotShadowColor="@color/transparent"

            android:layout_marginStart="12sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxLines="1"

            android:text="Đăng nhập"
            android:background="@drawable/shape_home_button_order_now"
            android:fontFamily="@font/svn_poppins_semibold" />
    </LinearLayout>


</LinearLayout>