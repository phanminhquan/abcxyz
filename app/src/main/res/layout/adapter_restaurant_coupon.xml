<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/restaurant_coupon_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12sp"
        android:gravity="center"
        android:background="@drawable/shape_restaurant_coupon_background"
        android:layout_marginHorizontal="20sp">

        <TextView
            android:id="@+id/restaurant_coupon_detail1"
            android:layout_width="wrap_content"
            android:maxWidth="160sp"
            android:minHeight="38sp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"

            android:textColor="@color/primary"
            android:text="Giảm 10%"
            android:textSize="14sp"
            android:fontFamily="@font/svn_poppins_semibold"
            android:lines="1"
            android:ellipsize="end"

            android:layout_marginVertical="8sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/restaurant_coupon_claim_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_home_button_order_now"
            android:letterSpacing=".05"
            android:minHeight="0sp"
            android:paddingHorizontal="16sp"
            android:paddingVertical="8sp"
            android:layout_marginVertical="8sp"
            android:outlineSpotShadowColor="@color/transparent"

            android:text="Dùng"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:fontFamily="@font/svn_poppins_semibold"

            android:layout_marginStart="40sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/restaurant_coupon_detail1" />

        <!-- Fake rounded on position -->
        <androidx.cardview.widget.CardView
            android:layout_width="20sp"
            android:layout_height="20sp"
            app:cardCornerRadius="999sp"
            android:backgroundTint="@color/pureWhite"
            android:outlineSpotShadowColor="@color/transparent"
            android:layout_toEndOf="@+id/restaurant_coupon_detail1"
            android:layout_marginStart="10sp"
            android:translationY="-10sp"
            android:layout_alignParentTop="true" />

        <androidx.cardview.widget.CardView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/restaurant_coupon_detail1"
            android:layout_alignBottom="@+id/restaurant_coupon_detail1"

            android:backgroundTint="@color/pureWhite"
            android:outlineSpotShadowColor="@color/transparent"
            android:translationY="18sp"

            app:cardCornerRadius="999sp" />
    </RelativeLayout>
</LinearLayout>
